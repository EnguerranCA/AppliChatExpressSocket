<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <title>Connexion au chat</title>
    <style>
        body {
            font-family: 'Inter', Arial, sans-serif;
            background: #18181b;
            color: #e5e5e5;
            margin: 0;
            padding: 0;
        }
        #login-container {
            max-width: 400px;
            margin: 80px auto;
            background: #232327;
            border-radius: 12px;
            box-shadow: 0 2px 16px rgba(0,0,0,0.4);
            padding: 32px 24px;
        }
        h2 {
            margin-bottom: 24px;
            color: #fff;
            text-align: center;
        }
        #login-form {
            display: flex;
            flex-direction: column;
        }
        #pseudo-input, #password-input {
            padding: 12px;
            border-radius: 6px;
            border: none;
            background: #29292e;
            color: #fff;
            font-size: 1.1rem;
            margin-bottom: 18px;
        }
        #login-btn {
            padding: 12px;
            border-radius: 6px;
            border: none;
            background: #9147ff;
            color: #fff;
            font-weight: bold;
            cursor: pointer;
            font-size: 1.1rem;
        }
        #login-btn:hover {
            background: #772ce8;
        }
    </style>
</head>
<body>
<div id="login-container">
    <h2>Connexion au chat</h2>
    <form id="login-form" autocomplete="off">
        <input id="pseudo-input" name="pseudo" type="text" placeholder="Pseudo..." maxlength="20" required />
        <input id="password-input" name="password" type="password" placeholder="Mot de passe..." required />
        <button id="login-btn" type="submit">Se connecter</button>
    </form>
</div>
<script>
    document.getElementById('login-form').addEventListener('submit', function(e) {
        e.preventDefault();
        const pseudo = document.getElementById('pseudo-input').value.trim();
        const password = document.getElementById('password-input').value.trim();
        
        if (pseudo.length > 0 && password.length > 0) {
            // Envoyer les données de connexion au serveur
            fetch('/api/login', {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json',
                },
                credentials: 'same-origin',
                body: JSON.stringify({ pseudo, password })
            })
            .then(response => response.json())
            .then(data => {
                if (data.success) {
                    localStorage.setItem('chatPseudo', pseudo);
                    localStorage.setItem('userToken', data.token || 'temp-token');
                    // Redirection forcée après connexion réussie
                    window.location.reload();
                } else {
                    alert(data.message || 'Erreur de connexion');
                }
            })
            .catch(error => {
                console.error('Erreur:', error);
                alert('Erreur de connexion au serveur');
            });
        }
    });
</script>
</body>
</html>
