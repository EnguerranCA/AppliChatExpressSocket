    <div id="chat-container" style="flex: 1 1 0; min-width: 320px; max-width: 480px;">
        <h2>Chat Simple</h2>
        <ul id="messages"></ul>
        <form id="form" autocomplete="off">
            <input id="input" placeholder="Votre message..." autocomplete="off" disabled />
            <button id="send" disabled>Envoyer</button>
