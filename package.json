{
  "name": "nodeintro",
  "type": "module",
  "version": "1.0.0",
  "main": "Module.js",
  "scripts": {
    "test": "npm run test:unit && npm run test:e2e",
    "test:unit": "node --experimental-vm-modules ./node_modules/jest/bin/jest.js --runInBand --testPathIgnorePatterns=tests/.*e2e\\.test\\.js",
    "test:e2e": "node --experimental-vm-modules ./node_modules/jest/bin/jest.js --runInBand --testPathPatterns=tests/.*e2e\\.test\\.js",
    "test:watch": "node --experimental-vm-modules node_modules/jest/bin/jest.js --watch",
    "test:coverage": "node --experimental-vm-modules node_modules/jest/bin/jest.js --coverage",
    "test:routes": "node --experimental-vm-modules node_modules/jest/bin/jest.js tests/routes.test.js",
    "test:messages": "node --experimental-vm-modules node_modules/jest/bin/jest.js tests/messageFormatting.test.js",
    "test:prisma": "node --experimental-vm-modules node_modules/jest/bin/jest.js tests/prisma.test.js",
    "test:socket": "node --experimental-vm-modules node_modules/jest/bin/jest.js tests/socket.integration.test.js",
    "test:integration": "node --experimental-vm-modules node_modules/jest/bin/jest.js tests/*.integration.test.js",
    "build": "npx prisma generate && npx prisma migrate deploy",
    "seed": "node scripts/seedUsers.js",
    "start": "node server.js"
  },
  "author": "",
  "license": "ISC",
  "description": "",
  "dependencies": {
    "body-parser": "^2.2.0",
    "cors": "^2.8.5",
    "dotenv": "^17.2.2",
    "express": "^5.1.0",
    "express-session": "^1.18.2",
    "install": "^0.13.0",
    "prisma": "^6.15.0",
    "save": "^2.9.0",
    "socket.io": "^4.8.1",
    "twig": "^1.17.1"
  },
  "devDependencies": {
    "@jest/globals": "^30.1.2",
    "@prisma/client": "^6.15.0",
    "jest": "^30.1.3",
    "jest-environment-node": "^30.1.2",
    "playwright": "^1.55.0",
    "socket.io-client": "^4.8.1",
    "supertest": "^7.1.4"
  }
}
